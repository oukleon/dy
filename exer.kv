#:kivy 1.11.1
#:set default_font_size "30"
# #:import Clipboard kivy.core.clipboard.Clipboard
<MainGrid>:
    drug1:drug1
    drug_list:drug_list
    desc:desc
    

    FloatLayout:
        cols: 1
        size: root.width, root.height

        Label:
            pos_hint:{'x': 0.1, 'y': 0.8}
            size_hint: (0.25, 0.1)
            font_size: default_font_size
            text: "Drug : "
            canvas.before:
                Color:
                    rgba: 1, .5, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        
        TextInput:
            pos_hint:{'x': 0.35, 'y': 0.8}
            size_hint: (0.45, 0.1)
            font_size: default_font_size
            id: drug1
            multiline: False
            hint_text: "Aspirin"
        
        Button:
            pos_hint:{'x':0.8,'y':0.8}
            size_hint:(0.125,0.075)
            font_size: default_font_size
            text: "Add"
            on_release: root.pressed_add()
        
        TextInput:
            pos_hint:{'x':0.1,'y':0.5}
            size_hint:(0.7,0.25)
            font_size:22
            id:drug_list
            multiline: True
            readonly:True
            hint_text:"List of Drugs"

        Button:
            pos_hint:{'x':0.8,'y':0.5}
            size_hint:(0.125,0.075)
            font_size: default_font_size
            text: "Re"
            on_release: root.pressed_re()

      
        TextInput:
            pos_hint:{'x': 0.1, 'y': 0.2}
            size_hint: (0.8, 0.3)
            font_size: 22
            id: desc
            multiline: True
            readonly: True
            hint_text: "Description"
            on_touch_down: if self.collide_point(*args[1].pos): root.copyText()

        Button:
            pos_hint:{'x': 0.25, 'y': 0.05}
            size_hint: (0.5, 0.1)
            font_size: default_font_size
            text: "Check"
            on_release: root.pressed()

<CopiedPopUp>
    Label:
        title: "Copied"
        text: "Description has been copied"
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.1, 'top': 0.5}
        